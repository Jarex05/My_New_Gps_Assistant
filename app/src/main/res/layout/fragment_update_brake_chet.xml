<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".fragments.chet.brake.update.UpdateBrakeFragmentChet">

    <EditText
        android:id="@+id/ed_update_start_brake_chet"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="@string/fragment_update_km_start_brake_chet"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/ed_update_pk_start_brake_chet"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/fragment_update_pk_start_brake_chet"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/ed_update_start_brake_chet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_update_start_brake_chet"
        app:layout_constraintTop_toBottomOf="@+id/ed_update_start_brake_chet"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,TextContrastCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_update_save_brake_chet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="150dp"
        android:clickable="true"
        android:src="@drawable/is_save_update_brake_chet"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget,SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_update_cancel_brake_chet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="150dp"
        android:clickable="true"
        android:src="@drawable/is_cancel_update_brake_chet"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editBrakeChetUpdateSwitch"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/ed_update_pk_start_brake_chet"
        app:layout_constraintTop_toBottomOf="@+id/ed_update_pk_start_brake_chet"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

    <Switch
        android:id="@+id/switchBrakeChetUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Проба/Оживление"
        app:layout_constraintStart_toStartOf="@+id/ed_update_pk_start_brake_chet"
        app:layout_constraintTop_toBottomOf="@+id/ed_update_pk_start_brake_chet"
        tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>